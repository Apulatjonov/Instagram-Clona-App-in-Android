<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pict"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/toppanelfirstspinneritemimage"/>
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutOfSpinnerFirstItemEver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/toppanelfirstspinneritemimage"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/toppanelfirstitemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apulatjonov"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/toppanelfirstitemnotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 notifications"/>
    </LinearLayout>
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/SpinnerArrotItemEver"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/LinearLayoutOfSpinnerFirstItemEver"/>
</androidx.constraintlayout.widget.ConstraintLayout>